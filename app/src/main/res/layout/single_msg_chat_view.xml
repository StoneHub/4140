<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/message"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"
        app:elevation="24dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/postit" />

    <TextView
        android:id="@+id/sender"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_imageview"
        android:layout_marginStart="1dp"
        android:layout_marginTop="@dimen/margin_sender"
        android:layout_toEndOf="@id/smsImage"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/time"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sender" />

    <ImageView
        android:id="@+id/smsImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@id/time"
        android:layout_marginTop="5dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_account_circle_black_36dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_below="@id/time"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/smsImage"
        android:background="@drawable/rounded_background"
        android:padding="@dimen/activity_horizontal_margin" />


</RelativeLayout>